<?xml version="1.0" encoding="UTF-8" ?>
<config>

  <!-- 
      text file patterns of replace target.
      *: any string
      ?: any character
    -->
  <text-files>

    *.txt *.sh *.bat *.cmd
    *.html *.htm *.js *.ts
    *.css *.scss
    *.xml *.xsl *.xsd *.xmi
    *.py
    *.php *.tmpl
    *.conf *.yml *.yaml

    <!-- Java -->
    *.java *.properties
    *.jsp *.jspx *.jspf *.tag *.tagx
    *.jnlp
    *.groovy *.scala
    MANIFEST.MF

    <!-- Eclipse -->
    .project
    .classpath
    org.eclipse.wst.common.component

    <!-- Apache Flex / Adobe Flash Builder -->
    *.mxml *.as
    .flexProperties
    .actionScriptProperties

  </text-files>

</config>
