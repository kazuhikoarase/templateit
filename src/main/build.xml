<project basedir="../.." default="all">

  <property name="src" location="src" />
  <property name="build" location="build" />
  <property name="templateit" location="${build}/templateit" />
  <property name="dist" location="${build}/dist" />
  <property name="test" location="${build}/test" />

  <target name="all" depends="dist,test" />

  <target name="init">
    <tstamp>
      <format property="timestamp" pattern="yyyyMMddHHmm" />
    </tstamp>
    <property name="version" value="v${timestamp}" />
    <property name="target.name" value="templateit.${version}" />
    <mkdir dir="${build}" />
  </target>

  <target name="clean">
    <delete dir="${build}" />
  </target>

  <target name="compile" depends="init">
    <mkdir dir="${build}/java" />
    <javac
      srcdir="${src}/main/java"
      destdir="${build}/java"
      encoding="UTF-8"
      target="1.6"
      source="1.6"
      debug="true"
      includeantruntime="false"
    />
  </target>

  <target name="dist" depends="compile">

    <mkdir dir="${templateit}" />

  	<copy todir="${templateit}" overwrite="true">
      <fileset dir="${src}/main/assets">
        <include name="*" />
        <exclude name="MANIFEST.MF" />
      </fileset>
    </copy>

    <echo file="${build}/java/version" message="${version}" />

    <jar manifest="${src}/main/assets/MANIFEST.MF" 
        jarfile="${templateit}/templateit.jar">
      <zipfileset dir="${build}/java">
        <include name="**/*" />
        <exclude name="META-INF/MANIFEST.MF" />
      </zipfileset>
    </jar>

    <mkdir dir="${dist}" />
    <zip destfile="${dist}/${target.name}.zip">
      <zipfileset dir="${templateit}" prefix="${target.name}">
        <include name="**/*" />
        <exclude name="dist/**" />
      </zipfileset>
    </zip>

    </target>

    <target name="test" depends="dist">

    	<mkdir dir="${test}" />
      <mkdir dir="${test}/templateit" />

      <copy todir="${test}">
        <fileset dir="${src}/test/MyTemplate" />
      </copy>
      <copy todir="${test}/templateit">
        <fileset dir="${templateit}" />
      </copy>

      <ant antfile="${test}/templateit/build.xml" inheritall="false" />

    </target>

</project>
